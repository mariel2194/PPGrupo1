@model IEnumerable<PPGrupo1.Models.Products>

@{
    ViewBag.Title = "Index";
}

<div class="custom">
    <h2>Registro de Productos</h2>
    <br />



    <div class="btn-text-left">
        <button type="button" class="btn"> @Html.ActionLink("Create New", "Create")</button>
    </div>

    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductsId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductsId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductsId })
                </td>
            </tr>
        }


    </table>
</div>
