@model IEnumerable<PPGrupo1.Models.Facturas>

@{
    ViewBag.Title = "Index";
}
<div class="custom">
    <h2>Registro de Productos</h2>
    <br />



    <div class="btn-text-left">
        <button type="button" class="btn"> @Html.ActionLink("Create New", "Create")</button>
    </div>

    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FacturaId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.FacturaId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.FacturaId })
                </td>
            </tr>
        }

    </table>
</div>